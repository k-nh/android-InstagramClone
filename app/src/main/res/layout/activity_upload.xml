<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".src.Main.Navigation.Upload.UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1"
            android:src="@drawable/icon_back"></ImageView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:textSize="23dp"
            android:text="새 게시물"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"></TextView>
        <ImageView
            android:id="@+id/btn_upload"
            android:layout_width="0dp"
            android:padding="13dp"
            android:layout_marginBottom="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_ok"></ImageView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></ImageView>
        <EditText
            android:id="@+id/upload_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:hint="문구 입력..."
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"></EditText>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray">
    </View>

    <TextView
        android:id="@+id/tv_tag"
        android:text="사람 태그하기"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></TextView>

    <TextView
        android:id="@+id/tv_location"
        android:text="위치 추가"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray">
    </View>
    <TextView
        android:id="@+id/tv_other_sns"
        android:text="다른 미디어에도 게시"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_facebook"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Facebook"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"></TextView>
        <Switch
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"></Switch>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_twitter"
            android:text="Twitter"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"></TextView>
        <Switch
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"></Switch>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_tumblr"
            android:text="Tumblr"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"></TextView>
        <Switch
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"></Switch>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="5dp"
        android:text="고급 설정"
        android:textStyle="bold"
        android:textColor="@color/colorGray"
        android:layout_marginLeft="10dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/gallery"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="갤러리"
            android:textColor="@color/colorGray"
            android:textSize="15dp"
            android:layout_height="match_parent"></TextView>
        <TextView
            android:id="@+id/camera"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="카메라"
            android:textColor="@color/colorGray"
            android:textSize="15dp"
            android:layout_height="match_parent"></TextView>

    </LinearLayout>




</LinearLayout>